/* pages/home/index.wxss */
.home--page {
  width: 100%;
  height: 100vh;
  background: #F5F5F5;
  display: flex;
  flex-direction: column;
}

/* 顶部搜索栏 */
.home--header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #87CEEB;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.home--header-location {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  cursor: pointer;
}

/* 定位图标 - 气球形状 */
.location-marker-icon {
  width: 28rpx;
  height: 38rpx;
  position: relative;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.location-marker-icon::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 28rpx;
  height: 28rpx;
  background: #FF4444;
  border-radius: 50% 50% 50% 0;
  transform: rotate(-45deg);
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.marker-dot {
  position: absolute;
  top: 7rpx;
  left: 9rpx;
  width: 10rpx;
  height: 10rpx;
  background: #FFF;
  border-radius: 50%;
  z-index: 1;
}

.location-icon-text {
  font-size: 36rpx;
  margin-right: 6rpx;
  line-height: 1;
  color: #FF4444;
}

.location-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  max-width: 100px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.home--header-search {
  flex: 1;
  display: flex;
  align-items: center;
  height: 64rpx;
  background: #FFF;
  border-radius: 32rpx;
  padding: 0 24rpx;
}

.search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

.home--header-scan {
  margin-left: 20rpx;
  padding: 8rpx;
}

.scan-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 滚动区域 */
.home--scroll {
  margin-top: 104rpx;
  flex: 1;
  overflow-y: auto;
}

/* 分类导航 */
.home--category {
  display: flex;
  flex-wrap: wrap;
  background: #FFF;
  padding: 30rpx 20rpx 10rpx;
  margin-bottom: 20rpx;
}

.category-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.category-icon-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
}

.category-icon {
  width: 48rpx;
  height: 48rpx;
  filter: invert(64%) sepia(89%) saturate(385%) hue-rotate(163deg) brightness(98%) contrast(91%);
}

.category-emoji {
  font-size: 48rpx;
  line-height: 1;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

.category-item.disabled {
  opacity: 0.5;
  pointer-events: none;
}

/* 轮播图 */
.home--banner {
  background: #FFF;
  padding: 0 30rpx 30rpx;
  margin-bottom: 20rpx;
}

.banner-swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 快捷入口 */
.home--quick-entry {
  display: flex;
  justify-content: space-around;
  background: #FFF;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.quick-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.quick-text {
  font-size: 24rpx;
  color: #666;
}

/* 推荐商家 */
.home--recommend {
  background: #FFF;
  padding: 30rpx;
  min-height: 400rpx;
}

.recommend-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.recommend-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.recommend-more {
  font-size: 24rpx;
  color: #999;
}

.recommend-list {
  display: flex;
  flex-direction: column;
}

.recommend-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F5F5F5;
}

.recommend-item:last-child {
  border-bottom: none;
}

.recommend-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.recommend-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recommend-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-rating {
  display: flex;
  align-items: center;
}

.star-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #FF8C00;
  margin-right: 16rpx;
}

.sales-text {
  font-size: 24rpx;
  color: #999;
}

.recommend-price {
  display: flex;
  align-items: center;
}

.price-text {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

.delivery-text {
  font-size: 24rpx;
  color: #999;
}
