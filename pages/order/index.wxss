/* pages/order/index.wxss */
.order-page {
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
}

.order-page-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
}

/* 页面头部 */
.order-page-header {
    background-color: #fff;
    padding: 20rpx;
    border-bottom: 1px solid #eee;
}

.order-page-title {
    font-size: 36rpx;
    font-weight: bold;
    text-align: center;
    color: #333;
}

/* 收货地址区域 */
.address-section {
    margin: 20rpx 20rpx 0;
    background-color: #fff;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.address-card {
    display: flex;
    align-items: center;
    padding: 30rpx 24rpx;
    gap: 20rpx;
}

.address-icon {
    font-size: 48rpx;
    line-height: 1;
}

.address-content {
    flex: 1;
}

.address-user {
    display: flex;
    align-items: center;
    gap: 20rpx;
    margin-bottom: 12rpx;
}

.user-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.user-phone {
    font-size: 28rpx;
    color: #666;
}

.address-detail {
    font-size: 28rpx;
    color: #999;
    line-height: 1.5;
}

.address-arrow {
    font-size: 48rpx;
    color: #ccc;
    font-weight: 300;
}

.address-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60rpx 24rpx;
    gap: 16rpx;
}

.empty-icon {
    font-size: 64rpx;
    color: #ff6b6b;
    font-weight: 300;
}

.address-empty .empty-text {
    font-size: 28rpx;
    color: #999;
}

/* 送达时间区域 */
.delivery-section {
    margin: 20rpx 20rpx 20rpx;
    background-color: #fff;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.delivery-card {
    display: flex;
    align-items: center;
    padding: 30rpx 24rpx;
    gap: 20rpx;
}

.delivery-icon {
    font-size: 48rpx;
    line-height: 1;
}

.delivery-content {
    flex: 1;
}

.delivery-label {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 8rpx;
}

.delivery-time {
    display: flex;
    align-items: baseline;
    gap: 16rpx;
}

.time-label {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.time-desc {
    font-size: 26rpx;
    color: #666;
}

.delivery-arrow {
    font-size: 48rpx;
    color: #ccc;
    font-weight: 300;
}

.delivery-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 60rpx 24rpx;
    gap: 16rpx;
}

.delivery-empty .empty-icon {
    font-size: 64rpx;
    color: #ff6b6b;
    font-weight: 300;
}

.delivery-empty .empty-text {
    font-size: 28rpx;
    color: #999;
}


/* 商品列表 */
.order-page-list {
    flex: 1;
    overflow-y: auto;
    padding: 0 20rpx 20rpx;
}

.order-item {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.item-info {
    margin-bottom: 20rpx;
}

.item-name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 8rpx;
}

.item-spec {
    font-size: 24rpx;
    color: #999;
    margin-bottom: 8rpx;
}

.item-price {
    font-size: 28rpx;
    color: #ff6b6b;
    font-weight: bold;
}

/* 商品控制区域 */
.item-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 16rpx;
    border-top: 1px solid #f0f0f0;
}

.quantity-control {
    display: flex;
    align-items: center;
    gap: 16rpx;
}

.btn-decrease,
.btn-increase {
    width: 56rpx;
    height: 56rpx;
    line-height: 56rpx;
    padding: 0;
    margin: 0;
    font-size: 32rpx;
    border-radius: 50%;
    background-color: #f5f5f5;
    color: #333;
    border: 1px solid #ddd;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn-decrease:active,
.btn-increase:active {
    background-color: #e0e0e0;
}

.input-count {
    width: 80rpx;
    height: 56rpx;
    line-height: 56rpx;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 8rpx;
    font-size: 28rpx;
    background-color: #fff;
}

.item-subtotal {
    font-size: 28rpx;
    color: #ff6b6b;
    font-weight: bold;
}

/* 空购物车 */
.empty-cart {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
}

.empty-cart .empty-text {
    font-size: 32rpx;
    color: #999;
    margin-bottom: 20rpx;
}

.empty-hint {
    font-size: 24rpx;
    color: #ccc;
}

/* 底部结算栏 */
.order-page-footer {
    background-color: #fff;
    padding: 24rpx;
    border-top: 1px solid #eee;
    box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
}

.order-summary {
    margin-bottom: 20rpx;
}

.summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
    font-size: 28rpx;
}

.summary-label {
    color: #666;
}

.summary-value {
    color: #333;
    font-weight: 500;
}

.total-row {
    padding-top: 12rpx;
    border-top: 1px solid #f0f0f0;
}

.summary-total {
    font-size: 36rpx;
    color: #ff6b6b;
    font-weight: bold;
}

.order-submit {
    margin-top: 20rpx;
}

.btn-submit {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    background: linear-gradient(135deg, #ff6b6b 0%, #ff5252 100%);
    color: #fff;
    font-size: 32rpx;
    font-weight: bold;
    border-radius: 44rpx;
    border: none;
}

.btn-submit:active {
    opacity: 0.9;
}


