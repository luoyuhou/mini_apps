<!--pages/me/index.wxml-->
<view class="fill-page">
  <view class="me--page">
    <!-- 导航 -->
    <view class='top-nav'>
      <view class="top-nav-name {{item.index == pageIndex ? 'top-nav-hover':''}}" wx:for="{{pages}}" wx:key="unique" id='{{item.index}}' catchtap='onSlidePage'>
        {{item.name}}
      </view>
    </view>

    <!-- body -->
    <view class="me--page-body">
      <!-- page1 -->
      <view hidden='{{pageIndex!=0}}'>
        <view class="todo"></view>
      </view>
      <!-- page2 -->
      <view hidden='{{pageIndex!=1}}'>
        <view class="table">
          <view class="tr bg-w">
            <view class="th" wx:for="{{accountColumn}}" wx:key="unique">{{item}}</view>
          </view>
          <block wx:for="{{accountTable}}" wx:key="unique">
            <view class="tr bg-g">
              <view class="td" wx:for="{{item}}" wx:for-item="value" wx:key="unique">{{value | 0}}</view>
            </view>
          </block>
        </view>

        <view style="margin-top: 5px">
          <view class="navigation" wx:for="{{accountNavigation}}" wx:key="unique">
            <navigator url="{{item.url}}">{{item.name}}</navigator>
            <text>></text>
          </view>
        </view>
      </view>
      <!-- page3 -->
      <view hidden='{{pageIndex!=2}}'>
        <view class="todo"></view>
      </view>
      <!-- page4 -->
      <view hidden='{{pageIndex!=3}}'>
        <view class="todo"></view>
      </view>
      <!-- page5 -->
      <view hidden='{{pageIndex!=4}}'>
        <view class="todo"></view>
      </view>
    </view>
  </view>
</view>

