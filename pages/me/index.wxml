<!--pages/me/index.wxml-->
<view class="fill-page">
  <view class="me--page">
    <!-- 导航 -->
    <view class='top-nav'>
      <view class="top-nav-name {{item.index == pageIndex ? 'top-nav-hover':''}}" wx:for="{{pages}}" wx:key="unique" id='{{item.index}}' catchtap='onSlidePage'>
        {{item.name}}
      </view>
    </view>

    <!-- body -->
    <view class="me--page-body">
      <!-- page1 -->
      <view hidden='{{pageIndex!=0}}'>
        <view class="todo"></view>
      </view>
      <!-- page2 -->
      <view hidden='{{pageIndex!=1}}'>
        <view class="table">
          <view class="tr bg-w">
            <view class="th" wx:for="{{currentWeekOrderTitles}}" wx:key="unique">{{item}}</view>
          </view>
          <block wx:for="{{currentWeekOrderSummaries}}" wx:key="unique">
            <view class="tr bg-g">
              <view class="td" wx:for="{{item}}" wx:for-item="value" wx:key="unique">{{value | 0}}</view>
            </view>
          </block>
        </view>

        <view style="margin-top: 1px">
          <view style="border-bottom: 2px solid #eee;" wx:for="{{orders}}" wx:key="unique">
            <navigator url="../order-list/order-list?id={{item.orderId}}" class="p-1">
              <view class="flex flex-justify-between">
                <text class="font-weight-700">{{item.store}}</text>
                <text>{{item.money}} 元</text>
              </view>
              <view class="flex flex-justify-between" style="margin-top: 2px;">
                <text>{{item.receipt}}</text>
                <text>{{item.address}}</text>
                <text>{{item.createDate}}</text>
              </view>
            </navigator>
          </view>
        </view>
      </view>
      <!-- page3 -->
      <view hidden='{{pageIndex!=2}}'>
        <view class="">
          <view>
            <view class="flex me--address-item" wx:for="{{address}}" wx:key="unique">
              <view style="flex: 1;">
                <view class="me--address-item-address">{{item.address}}</view>
                <view class="me--address-item-receiver">
                  <text>{{item.recipient}}</text>
                  <text>{{item.phone}}</text>
                  <text />
                </view>
              </view>
              <view style="width: 1rem; position: relative;">
                <text wx:if="{{item.is_default}}" class="triangle-right-bottom" style="position: absolute; top: 0px; right: -8px;"></text>
                <navigator url="../address/edit/index">
                  <image style="width: 1rem; height: 1rem;" src='data:image/svg+xml;base64,'/>
                </navigator>
              </view>
            </view>
          </view>
        
        <view style="margin-top: 1rem;">
          <navigator url="../address/add/index">
            <button type="primary">新增</button>
          </navigator>
          
        </view>
        </view>
      </view>
      <!-- page4 -->
      <view hidden='{{pageIndex!=3}}'>
        <view class="todo"></view>
      </view>
      <!-- page5 -->
      <view hidden='{{pageIndex!=4}}'>
        <view class="todo"></view>
      </view>
    </view>
  </view>
</view>

